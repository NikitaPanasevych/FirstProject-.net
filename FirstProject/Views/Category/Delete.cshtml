@model Category

<form method="post" asp-action="Delete">
	<input aps-for="Id" hidden />
	<div class="border p-4 m-3">
		<div class="row">
			<h2 class="text-primary">
				Delete a category
			</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label class="text-primary" asp-for="Name"></label>
			<input disabled asp-for="Name" class="form-control" />
		</div>
		<div class="mb-3">
			<label class="text-primary" asp-for="DisplayOrder"></label>
			<input disabled asp-for="DisplayOrder" class="form-control" />
		</div>
		<div class="mt-4">
			<button class="btn btn-primary" type="submit" style="width:150px">Delete</button>
			<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to List</a>
		</div>
		
	</div>
</form>


