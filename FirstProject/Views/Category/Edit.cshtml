@model Category

<form method="post" asp-action="Edit">
	<div class="border p-4 m-3">
		<div class="row">
			<h2 class="text-primary">
				Edit a category
			</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label class="text-primary" asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span class="text-danger" asp-validation-for="Name"></span>
		</div>
		<div class="mb-3">
			<label class="text-primary" asp-for="DisplayOrder"></label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span class="text-danger" asp-validation-for="DisplayOrder"></span>
		</div>
		<div class="mt-4">
			<button class="btn btn-primary" type="submit" style="width:150px">Update</button>
			<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px"> Back to List</a>
		</div>
		
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

