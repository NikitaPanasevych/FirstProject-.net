@model  IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<partial name="_TempData" />
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
             <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                 Create new category <i class="bi bi-plus-lg"></i>
             </a>
        </div> 
    </div>


<table style="width: 100%" class="table table-bordered tabel-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Edit
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="width: 40%">
                    @obj.Name
                </td>
                <td style="width:30%"> 
                    @obj.DisplayOrder
                </td>
                <td style="width:15%"> 
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i></a>
                    </div>
                </td>
                <td style="width:15%"> 
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3-fill"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>